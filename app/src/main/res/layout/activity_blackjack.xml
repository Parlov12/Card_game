        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <ImageView
        android:id="@+id/player_second_card"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/second_player_card"
        app:layout_constraintBottom_toBottomOf="@+id/player_card_background"
        app:layout_constraintStart_toStartOf="@+id/player_card_background"
        app:layout_constraintTop_toTopOf="@+id/player_card_background"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/player_third_card"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/third_player_card"
        app:layout_constraintBottom_toBottomOf="@+id/player_second_card"
        app:layout_constraintStart_toStartOf="@+id/player_second_card"
        app:layout_constraintTop_toTopOf="@+id/player_second_card"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/player_forth_card"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/forth_player_card"
