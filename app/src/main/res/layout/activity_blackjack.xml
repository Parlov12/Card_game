        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/double_button"
        app:layout_constraintEnd_toStartOf="@+id/dosta_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/double_button"
        app:layout_constraintTop_toTopOf="@+id/double_button" />

    <TextView
