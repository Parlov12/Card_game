        app:layout_constraintTop_toTopOf="@+id/player_forth_card"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/player_sixth_card"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/sixth_player_card"
        app:layout_constraintBottom_toBottomOf="@+id/player_fifth_card"
