<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E9520"
    tools:context=".Blackjack"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/deck"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deck6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pc_card_background"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/deck"
        android:scaleType="fitCenter"
        android:src="@drawable/no_card"
        app:layout_constraintBottom_toBottomOf="@+id/deck"
        app:layout_constraintStart_toEndOf="@+id/deck"
        app:layout_constraintTop_toTopOf="@+id/deck" />

    <ImageView
        android:id="@+id/pc_second_card"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pc_card_background"
        app:layout_constraintStart_toStartOf="@+id/pc_card_background"
        app:layout_constraintTop_toTopOf="@+id/pc_card_background" />

    <ImageView
        android:id="@+id/pc_third_card"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pc_card_background"
        app:layout_constraintStart_toStartOf="@+id/pc_card_background"
        app:layout_constraintTop_toTopOf="@+id/pc_card_background"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pc_forth_card"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pc_card_background"
        app:layout_constraintStart_toStartOf="@+id/pc_card_background"
        app:layout_constraintTop_toTopOf="@+id/pc_card_background"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pc_fifth_card"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pc_card_background"
        app:layout_constraintStart_toStartOf="@+id/pc_card_background"
        app:layout_constraintTop_toTopOf="@+id/pc_card_background"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pc_sixth_card"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pc_card_background"
        app:layout_constraintStart_toStartOf="@+id/pc_card_background"
        app:layout_constraintTop_toTopOf="@+id/pc_card_background"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/player_card_background"
        android:layout_width="93dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src = "@drawable/no_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        />

    <ImageView
        android:id="@+id/player_second_card"
        android:layout_width="93dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_card_background"
        app:layout_constraintStart_toStartOf="@+id/player_card_background"
        app:layout_constraintTop_toTopOf="@+id/player_card_background"
        app:layout_constraintVertical_bias="0.0"
        />

    <ImageView
        android:id="@+id/player_third_card"
        android:layout_width="93dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_card_background"
        app:layout_constraintStart_toStartOf="@+id/player_card_background"
        app:layout_constraintTop_toTopOf="@+id/player_card_background"
        app:layout_constraintVertical_bias="0.0"
        />

    <ImageView
        android:id="@+id/player_forth_card"
        android:layout_width="93dp"
        android:layout_height="120dp"
        android:layout_marginStart="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_card_background"
        app:layout_constraintStart_toStartOf="@+id/player_card_background"
        app:layout_constraintTop_toTopOf="@+id/player_card_background"
        app:layout_constraintVertical_bias="0.0"
         />

    <ImageView
        android:id="@+id/player_fifth_card"
        android:layout_width="93dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_card_background"
        app:layout_constraintStart_toStartOf="@+id/player_card_background"
        app:layout_constraintTop_toTopOf="@+id/player_card_background"
        app:layout_constraintVertical_bias="0.0"
        />

    <ImageView
        android:id="@+id/player_sixth_card"
        android:layout_width="93dp"
        android:layout_height="120dp"
        android:layout_marginStart="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/player_card_background"
        app:layout_constraintStart_toStartOf="@+id/player_card_background"
        app:layout_constraintTop_toTopOf="@+id/player_card_background"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ODABERI ULOG:"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_card_background" />

    <ToggleButton
        android:id="@+id/ulog1"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ulog_onoff"
        android:onClick="Ulog1Clicked"
        android:textColor="#ffffff"
        android:textOff="100"
        android:textOn="100"
        app:layout_constraintBottom_toTopOf="@+id/stanje_text"
        app:layout_constraintEnd_toStartOf="@+id/ulog2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ToggleButton
        android:id="@+id/ulog2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ulog_onoff"
        android:onClick="Ulog2Clicked"
        android:text="ToggleButton"
        android:textColor="#FFFFFF"
        android:textOff="200"
        android:textOn="200"
        app:layout_constraintBottom_toBottomOf="@+id/ulog1"
        app:layout_constraintEnd_toStartOf="@+id/ulog3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ulog1"
        app:layout_constraintTop_toTopOf="@+id/ulog1" />

    <ToggleButton
        android:id="@+id/ulog3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ulog_onoff"
        android:onClick="Ulog3Clicked"
        android:text="ToggleButton"
        android:textColor="#FFFFFF"
        android:textOff="500"
        android:textOn="500"
        app:layout_constraintBottom_toBottomOf="@+id/ulog2"
        app:layout_constraintEnd_toStartOf="@+id/dijeli_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ulog2"
        app:layout_constraintTop_toTopOf="@+id/ulog2"
        app:layout_goneMarginLeft="5dp"
        app:layout_goneMarginRight="5dp" />

    <TextView
        android:id="@+id/stanje_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="STANJE: "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dijeli_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="#0B530D"
        android:text="DIJELI"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/ulog3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ulog3"
        app:layout_constraintTop_toTopOf="@+id/ulog3" />

    <Button
        android:id="@+id/vuci_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#0B530D"
        android:text="VUCI"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <Button
        android:id="@+id/dosta_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#0B530D"
        android:text="DOSTA"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vuci_button" />

</androidx.constraintlayout.widget.ConstraintLayout>