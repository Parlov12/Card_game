        app:layout_constraintStart_toStartOf="@+id/pc_forth_card"
        app:layout_constraintTop_toTopOf="@+id/pc_forth_card"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pc_sixth_card"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/sixth_pc_card"
