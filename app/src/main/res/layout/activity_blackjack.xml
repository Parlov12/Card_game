        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/total_bet"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/ulog2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ulog2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ulog_25_off"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/ulog1"
        app:layout_constraintEnd_toStartOf="@+id/ulog3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ulog1"
        app:layout_constraintTop_toTopOf="@+id/ulog1" />

    <Button
        android:id="@+id/ulog3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ulog_50_off"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/ulog2"
        app:layout_constraintEnd_toStartOf="@+id/ulog4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ulog2"
        app:layout_constraintTop_toTopOf="@+id/ulog2" />

    <Button
        android:id="@+id/ulog4"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ulog_100_off"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/ulog3"
        app:layout_constraintStart_toEndOf="@+id/ulog3"
        app:layout_constraintTop_toTopOf="@+id/ulog3" />


    <TextView
        android:id="@+id/balance_background"
        android:layout_width="149dp"
        android:layout_height="46dp"
        android:background="@drawable/balance_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/balance_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="@string/balance"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_background"
        app:layout_constraintEnd_toEndOf="@+id/balance_background"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/balance_background"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/dijeli_button"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/deal_cust"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="@string/start"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ulog4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ulog4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/vuci_button"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/vuci_button_off_fix"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="HIT"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dosta_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dosta_button"
        app:layout_constraintTop_toTopOf="@+id/dosta_button" />

    <Button
        android:id="@+id/dosta_button"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/deal_cust"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="STAND"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/split_button"
        app:layout_constraintEnd_toStartOf="@+id/vuci_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/split_button"
        app:layout_constraintTop_toTopOf="@+id/split_button" />

    <Button
        android:id="@+id/double_button"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/deal_cust"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="DOUBLE"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/choose_bet"
        app:layout_constraintEnd_toStartOf="@+id/split_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/split_button"
