        app:layout_constraintStart_toStartOf="@+id/player_third_card"
        app:layout_constraintTop_toTopOf="@+id/player_third_card"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/player_fifth_card"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/fifth_player_card"
        app:layout_constraintBottom_toBottomOf="@+id/player_forth_card"
