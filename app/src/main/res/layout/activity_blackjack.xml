        android:layout_alignStart="@+id/pc_card_background"
        android:layout_alignTop="@+id/pc_card_background"
        android:layout_alignBottom="@+id/pc_card_background"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/seventh_pc_card"
        android:scaleType="fitCenter"
