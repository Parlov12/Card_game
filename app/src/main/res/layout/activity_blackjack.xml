        android:layout_marginStart="16dp"
        android:contentDescription="@string/third_pc_card"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pc_second_card"
        app:layout_constraintStart_toStartOf="@+id/pc_second_card"
        app:layout_constraintTop_toTopOf="@+id/pc_second_card"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pc_forth_card"
        android:layout_width="60dp"
