<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1_1"
    tools:context=".PracticePlay">

    <TextView
        android:id="@+id/tap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/firstCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/secondCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/thirdCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/forthCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/fifthCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/sixthCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/seventhCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/eighthCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/ninethCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />

    <ImageView
        android:id="@+id/tenthCard"
        android:layout_width="65dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/herc_1" />


    <TextView
        android:id="@+id/start_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="press to start..."
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/deck_practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_text"
        app:srcCompat="@drawable/deck1" />

    <ImageView
        android:id="@+id/null_card"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/no_card" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/sum_result_edit"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="18"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/result2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/sum_result_edit"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="18"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/result1"
        app:layout_constraintEnd_toStartOf="@+id/result3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/result1"
        app:layout_constraintTop_toTopOf="@+id/result1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/sum_result_edit"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:text="18"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/result2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/result2"
        app:layout_constraintTop_toTopOf="@+id/result2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/method_name"
        android:layout_width="118dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/method_name_shape"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="METHOD"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level"
        android:layout_width="118dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/method_name_shape"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="LEVEL 1"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>