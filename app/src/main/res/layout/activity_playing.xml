<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Adut:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageButton
        android:id="@+id/player_card1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/player_card1"
        app:layout_constraintBottom_toBottomOf="@+id/player_card2"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toStartOf="@+id/player_card2"
        app:layout_constraintTop_toTopOf="@+id/player_card2"
        app:srcCompat="@drawable/karta_test" />

    <ImageButton
        android:id="@+id/player_card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/player_card2"
        app:layout_constraintBottom_toBottomOf="@+id/player_card3"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toStartOf="@+id/player_card3"
        app:layout_constraintTop_toTopOf="@+id/player_card3"
        app:srcCompat="@drawable/karta_test" />

    <ImageButton
        android:id="@+id/player_card3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/player_card3"
        app:layout_constraintBottom_toBottomOf="@+id/player_card4"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toStartOf="@+id/player_card4"
        app:layout_constraintTop_toTopOf="@+id/player_card4"
        app:srcCompat="@drawable/karta_test" />

    <ImageButton
        android:id="@+id/player_card4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/player_card4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/karta_test" />

    <TextView
        android:id="@+id/player_text1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/player_card1"
        app:layout_constraintEnd_toEndOf="@+id/player_card1"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/player_card1"
        app:layout_constraintTop_toTopOf="@+id/player_card1" />

    <TextView
        android:id="@+id/player_text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/player_card2"
        app:layout_constraintEnd_toEndOf="@+id/player_card2"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/player_card2"
        app:layout_constraintTop_toTopOf="@+id/player_card2" />

    <TextView
        android:id="@+id/player_text3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/player_card3"
        app:layout_constraintEnd_toEndOf="@+id/player_card3"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/player_card3"
        app:layout_constraintTop_toTopOf="@+id/player_card3" />

    <TextView
        android:id="@+id/player_text4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/player_card4"
        app:layout_constraintEnd_toEndOf="@+id/player_card4"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/player_card4"
        app:layout_constraintTop_toTopOf="@+id/player_card4" />

    <ImageView
        android:id="@+id/stol1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/stol2"
        app:layout_constraintEnd_toStartOf="@+id/stol2"
        app:layout_constraintTop_toTopOf="@+id/stol2"
        app:srcCompat="@drawable/karta_test" />

    <ImageView
        android:id="@+id/stol2"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="@drawable/karta_test" />

    <ImageView
        android:id="@+id/stol3"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="@drawable/karta_test" />

    <ImageView
        android:id="@+id/stol4"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/stol3"
        app:layout_constraintStart_toEndOf="@+id/stol3"
        app:layout_constraintTop_toTopOf="@+id/stol3"
        app:srcCompat="@drawable/karta_test" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/adut"
        android:layout_width="0dp"
        android:layout_height="113dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/karta_test" />

    <TextView
        android:id="@+id/adut_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/adut"
        app:layout_constraintEnd_toEndOf="@+id/adut"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/adut"
        app:layout_constraintTop_toTopOf="@+id/adut" />

    <Button
        android:id="@+id/start_game"
        android:layout_width="68dp"
        android:layout_height="44dp"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/stol1_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/stol1"
        app:layout_constraintEnd_toEndOf="@+id/stol1"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/stol1"
        app:layout_constraintTop_toTopOf="@+id/stol1" />

    <TextView
        android:id="@+id/stol2_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/stol2"
        app:layout_constraintEnd_toEndOf="@+id/stol2"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/stol2"
        app:layout_constraintTop_toTopOf="@+id/stol2" />

    <TextView
        android:id="@+id/stol3_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/stol3"
        app:layout_constraintEnd_toEndOf="@+id/stol3"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/stol3"
        app:layout_constraintTop_toTopOf="@+id/stol3" />

    <TextView
        android:id="@+id/stol4_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/stol4"
        app:layout_constraintEnd_toEndOf="@+id/stol4"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/stol4"
        app:layout_constraintTop_toTopOf="@+id/stol4" />

</androidx.constraintlayout.widget.ConstraintLayout>